<?xml version="1.0" encoding="utf-8"?>

<!-- Main layout for ChatActivity -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333"
    android:id="@+id/chat_linear"
    android:gravity="bottom">

    <!-- Show chat history -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chatWindow_recyclerView"
        android:gravity="top"
        android:layout_gravity="top"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/chat_input_linear"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center">

        <!-- Message input EditText -->
        <EditText
            android:id="@+id/chat_EditText"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:hint="Input a message here. "
            android:background="@drawable/set_button_selector"
            android:textSize="20sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_weight="17"
            android:layout_marginVertical="0dp"
            android:autofillHints="message"
            android:singleLine="false"
            android:gravity="top"
            android:inputType="textMultiLine" />

        <!-- Send button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:id="@+id/chat_btn_send"
            android:textAllCaps="false"
            android:text="Send"
            android:layout_weight="1"
            android:background="@drawable/set_button_selector"/>

    </LinearLayout>

</LinearLayout>

