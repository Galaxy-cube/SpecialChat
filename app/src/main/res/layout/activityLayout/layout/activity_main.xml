<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Main content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">


            <!-- Chats page -->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_chat_recyclerView" />

<!--            <ListView-->
<!--                android:id="@+id/main_chats_listView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->
<!--            </ListView>-->

            <!-- contacts page -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_contacts"
                android:visibility="gone"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contacts"
                    android:textColor="#eee"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_contacts_listView">
                </ListView>
            </LinearLayout>

            <!-- moments page -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_moments"
                android:visibility="gone"
                android:orientation="vertical">
                <!-- todo: complete this. (next ver.) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/features_are_still_being_perfected"
                    android:textColor="#eee">
                </TextView>
            </LinearLayout>

            <!--  me page -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_me"
                android:visibility="gone"
                android:orientation="vertical">
                <!-- todo: complete this. -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/features_are_still_being_perfected"
                    android:textColor="#eee">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:layout_margin="0dp">
            <Button
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_btn_chats"
                android:text="@string/chats"
                android:textSize="12sp"
                android:background="@drawable/set_button_selector"
                android:layout_margin="0dp"
                tools:ignore="ButtonStyle"
                android:layout_weight="1">
            </Button>
            <Button
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_btn_contacts"
                android:text="@string/contacts"
                android:textSize="12sp"
                android:background="@drawable/set_button_selector"
                android:layout_margin="0dp"
                tools:ignore="ButtonStyle"
                android:layout_weight="1">
            </Button>
            <Button
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_btn_moments"
                android:text="@string/moments"
                android:textSize="12sp"
                android:background="@drawable/set_button_selector"
                android:layout_margin="0dp"
                tools:ignore="ButtonStyle"
                android:layout_weight="1">
            </Button>
            <Button
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:id="@+id/menu_btn_me"
                android:text="@string/me"
                android:textSize="12sp"
                android:background="@drawable/set_button_selector"
                android:layout_margin="0dp"
                tools:ignore="ButtonStyle"
                android:layout_weight="1">
            </Button>
        </LinearLayout>

    </LinearLayout>

    <!-- Font login page -->
    <LinearLayout
        android:id="@+id/font_login_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="233dp"
            android:layout_height="233dp"
            android:background="@mipmap/logo"
            android:layout_gravity="center"
            android:layout_marginBottom="233dp"
            android:contentDescription="@string/font_login_page_pic" />
        <Button
            android:id="@+id/btn_front_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="30dp"
            android:text="@string/login"
            android:background="@drawable/set_button_selector"/>

    </LinearLayout>

</LinearLayout>

<!-- layout end -->

