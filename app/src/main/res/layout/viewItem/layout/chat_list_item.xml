<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#333"
    android:paddingVertical="2dp"
    android:paddingHorizontal="3dp"
    android:id="@+id/chatListItem_container"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/set_button_selector"
        android:gravity="center">

        <cc0x29a.specialchat.ChatListImageView
            android:id="@+id/chatListItem_profile_pic"
            android:background="#333"
            android:src="@mipmap/logo"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="2dp" />

<!--        <ImageView-->
<!--            android:id="@+id/chatListItem_profile_pic"-->
<!--            android:background="#333"-->
<!--            android:src="@mipmap/logo"-->
<!--            android:layout_width="63dp"-->
<!--            android:layout_height="63dp"-->
<!--            android:layout_marginVertical="5dp"-->
<!--            android:layout_marginStart="13dp"-->
<!--            android:layout_marginEnd="2dp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/chatListItem_nickname"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Zhong Wenliang"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/chatListItem_last_msg"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="17sp"
                android:text="I love you. "
                android:layout_marginVertical="1dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/chatListItem_last_chat_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:text="20.03.06 18:49"
                android:layout_marginEnd="20dp"
                android:layout_gravity="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>