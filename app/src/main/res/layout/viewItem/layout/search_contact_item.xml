<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/set_button_selector"
    android:id="@+id/search_contact_container"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/search_contact_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zhong_wenliang"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/search_contact_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4152637"
        android:textSize="17sp"
        android:layout_marginStart="26dp"/>

</LinearLayout>
